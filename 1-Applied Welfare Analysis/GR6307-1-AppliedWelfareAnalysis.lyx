Non-Government Distortions
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
To go from this to a sufficient statistics formula, assume
\end_layout

\begin_layout Enumerate
\begin_inset Formula $x_{j}^{i}=x_{j}^{i}\left(1+\tau_{0}^{i},\ldots,1+\tau_{J}^{i},Y^{i}\right)$
\end_inset

: Demand doesn't depend on the externalities
\end_layout

\begin_layout Enumerate
The externalities take the form 
\begin_inset Formula $\phi^{i}=\phi_{I_{j}}^{i}\mathbf{1}\left\{ \hat{i}=i\right\} +\phi_{E_{j}}^{i}$
\end_inset


\end_layout

\begin_layout Itemize
Now we get
\begin_inset Formula 
\begin{align*}
\left.\frac{dW/d\theta}{\mu}\right|_{g^{i}=1} & =\int_{i}\sum_{j=0}^{J}\left[\left(\tau_{j}^{i}+\tau_{I_{j}}^{i}+\tau_{E_{j}}\right)\frac{dx_{j}^{i}}{d\theta}\right]di\\
 & =\int_{i}\left[\sum_{j=0}^{J}\sum_{k=0}^{J}\hat{\tau}^{i}x_{j}^{i}\varepsilon_{jk}^{i}\frac{d\tau_{k}^{i}/d\theta}{1+\tau_{k}^{i}}-\sum_{j=0}^{J}\hat{\tau}_{j}x_{j}^{i}\eta_{j}^{i}\frac{\partial T^{i}/\partial\theta}{Y^{i}}\right]di
\end{align*}

\end_inset

where 
\begin_inset Formula $\tau_{I_{j}}^{i}\equiv\frac{\partial v^{i}/\partial E_{j}^{i}}{\lambda^{i}}\phi_{I_{j}}^{i}$
\end_inset

, 
\begin_inset Formula $\tau_{E_{j}}\equiv\int_{i}\frac{\partial v^{i}/\partial E_{j}^{i}}{\lambda^{i}}\phi_{E_{j}}^{i}$
\end_inset

, and 
\begin_inset Formula $\hat{\tau}_{j}^{i}=\tau_{j}^{i}+\tau_{I_{j}}^{i}+\tau_{E_{j}}$
\end_inset


\end_layout

\end_deeper

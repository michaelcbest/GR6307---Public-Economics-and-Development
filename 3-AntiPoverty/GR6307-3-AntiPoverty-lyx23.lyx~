\begin_deeper
\begin_layout Itemize
Numerical approximation suggests threshold 
\begin_inset Formula $\hat{k}=2.34\;(0.284)$
\end_inset

 which is 9,379 BDT (US$508)
\end_layout

\begin_layout Itemize
Now estimate effect on dynamics of wealth accumulation.
\end_layout

\begin_layout Itemize
Define 
\begin_inset Formula $\Delta k_{i}=k_{i,3}-k_{i,1}$
\end_inset

=wealth accumulation in 4 years excluding the transfer.
\begin_inset Formula 
\[
\Delta k_{i}=\alpha+\beta_{0}\mathbb{I}\left[k_{i,1}>\hat{k}\right]+\beta_{1}\left(k_{i}-\hat{k}\right)+\beta_{2}\mathbb{I}\left[k_{i,1}>\hat{k}\right]\times\left(k_{i,1}-\hat{k}\right)+\varepsilon_{i}
\]

\end_inset


\end_layout


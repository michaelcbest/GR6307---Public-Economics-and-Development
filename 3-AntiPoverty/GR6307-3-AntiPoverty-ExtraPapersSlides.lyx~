\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Study Programa de Apoyo Alimentario (PAL) in Mexico
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
Operates in 5,000 very poor, rural villages in Mexico.
 
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
Villages eligible if population under 2.5K, and classified as highly marginalized.
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
Typically poorer than Progresa/Oportunidades villages.
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
PAL provides monthly in-kind allotment:
\end_layout

\begin_deeper
\begin_layout Itemize
7 basics (corn flour, rice, beans, pasta, biscuits, fortified milk powder,
 vegetable oil)
\end_layout

\begin_layout Itemize
2-4 supplements (canned tuna/sardines, lentils, corn starch, chocolate powder,
 cereal)
\begin_inset VSpace bigskip
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Allotment inframarginal for most households (consumption > allotment)
\end_layout

\end_deeper

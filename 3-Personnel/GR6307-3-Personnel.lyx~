\begin_deeper
\begin_layout Itemize
What happens when the different sectors are competing for workers?
\end_layout

\begin_layout Itemize
Define 
\begin_inset Formula $\mathcal{A}_{p}=\left\{ p_{0},p_{1},p_{2}\right\} $
\end_inset

 as the set of types of the principals.
 
\begin_inset Formula $\mathcal{A}_{a}=\left\{ a_{0},a_{1},a_{2}\right\} $
\end_inset

 is the set of types of the agents.
\end_layout

\begin_layout Itemize
A matching process is a matching function 
\begin_inset Formula $\mu:\mathcal{A}_{p}\cup\mathcal{A}_{a}\rightarrow\mathcal{A}_{p}\cup\mathcal{A}_{a}$
\end_inset

 such that
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\mu\left(p_{i}\right)\in\mathcal{A}_{a}\cup\left\{ p_{i}\right\} \;\forall p_{i}\in\mathcal{A}_{p}$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\mu\left(a_{j}\right)\in\mathcal{A}_{p}\cup\left\{ a_{j}\right\} \:\forall a_{i}\in\mathcal{A}_{a}$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\mu\left(p_{i}\right)=a_{j}\iff\mu\left(a_{j}\right)=p_{i}\;\forall\left(p_{i},a_{j}\right)\in\mathcal{A}_{p}\times\mathcal{A}_{j}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
\begin_inset Formula $n_{i}^{p}$
\end_inset

 = number of principals of type 
\begin_inset Formula $i$
\end_inset

.
 Analogously 
\begin_inset Formula $n_{j}^{a}$
\end_inset


\end_layout

\begin_layout Itemize
Assume 
\begin_inset Formula $n_{1}^{a}=n_{1}^{p}$
\end_inset

 and 
\begin_inset Formula $n_{2}^{a}=n_{2}^{p}$
\end_inset

.
\end_layout

\begin_layout Itemize
However, allow 
\emph on
unemployment 
\emph default

\begin_inset Formula $\left(n_{0}^{a}>n_{0}^{p}\right)$
\end_inset

 and 
\emph on
full employment 
\emph default

\begin_inset Formula $\left(n_{0}^{a}<n_{0}^{p}\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout


\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Chetty (2009): Evasion With Transfer Cost
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Envelope theorem 
\begin_inset Formula $\rightarrow$
\end_inset


\begin_inset Formula 
\begin{align*}
\frac{dW\left(t\right)}{dt} & =-\left(wl-e\right)-\frac{\partial z}{\partial t}+\left(wl-e\right)+\frac{\partial z}{\partial t}+\frac{\partial z}{\partial e}\frac{\partial e}{\partial t}+t\frac{d\left[wl-e\right]}{dt}\\
 & =t\frac{dwl}{dt}+\frac{de}{dt}\left(\frac{\partial z}{\partial e}-t\right)
\end{align*}

\end_inset


\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
Evasion choice FOC: 
\begin_inset Formula $\frac{\partial z}{\partial e}=t$
\end_inset

 
\begin_inset Formula $\rightarrow dW\left(t\right)/dt=dLI/dt$
\end_inset

 where 
\begin_inset Formula $LI=wl$
\end_inset

 is real income
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
ETI no longer sufficient, need 
\emph on
real
\emph default
 income elasticity

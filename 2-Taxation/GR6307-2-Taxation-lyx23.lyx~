\begin_deeper
\begin_layout Itemize
Defining 
\begin_inset Formula $SE_{i}=I\text{\left\{  \text{self-employed}\right\}  }$
\end_inset

:
\begin_inset Formula 
\[
credit_{ij}=\beta_{1j}Y_{ij}^{R}\left(1-SE_{i}\right)+\left(\beta_{1j}\lambda_{j}\right)Y_{ij}^{R}SE_{i}+Risk_{i}\Phi+SOFT_{ij}\Psi
\]

\end_inset


\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
So estimate
\begin_inset Formula 
\begin{align*}
credit_{ij} & =\beta_{1j}Y_{ij}^{R}\left(1-SE_{i}\right)+\beta_{2j}Y_{ij}^{R}SE_{i}+f.e.^{CreditGrade}\\
 & \quad+SOFT_{ij}\Psi+\varepsilon_{ij}
\end{align*}

\end_inset


\begin_inset VSpace medskip
\end_inset

where 
\begin_inset Formula $SOFT_{ij}$
\end_inset

 includes wealth, neighborhood info, income risk
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\Rightarrow\lambda_{j}=\beta_{2j}/\beta_{1j}$
\end_inset


\end_layout


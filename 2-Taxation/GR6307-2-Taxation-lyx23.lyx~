\begin_inset Formula 
\[
\frac{\tau}{1-\tau}\times\frac{\partial\tau_{E}}{\partial\tau}\left(\mu\right)\times{\color{blue}\left\{ \frac{\beta\left[1+\alpha\left(\mu\right)\right]}{1+\left(1-\beta\right)\varepsilon_{p_{A}}}\right\} }=G\left(\mu\right)\times\frac{\varepsilon_{\hat{c}-c}}{\varepsilon_{y}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\alpha=\frac{\text{MRTS}}{1+\text{MRTS}\times\left(\frac{\partial l_{B}}{\partial\tau_{E}}/\frac{\partial y_{A}}{\partial\tau_{E}}\right)}\quad\beta=\frac{y_{B}}{p_{A}y_{A}+y_{B}}\quad\varepsilon_{p_{A}}=\frac{\partial\log p_{A}}{\partial\log\tau_{E}}
\]

\end_inset


\end_layout


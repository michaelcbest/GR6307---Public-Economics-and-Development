\begin_layout Itemize
true income 
\begin_inset Formula $Y^{True}$
\end_inset

, credit score 
\begin_inset Formula $Risk$
\end_inset

, 
\begin_inset Quotes eld
\end_inset

soft information
\begin_inset Quotes erd
\end_inset


\begin_inset Formula 
\[
credit_{ij}=\beta_{1j}Y_{ij}^{True}+Risk_{i}\Phi+SOFT_{ij}\Psi
\]

\end_inset


\begin_inset VSpace bigskip
\end_inset


\end_layout

\begin_layout Itemize
Assume: wage workers don't evade, self employed evade differentially across
 industries.
 Reported income 
\begin_inset Formula $Y_{ij}^{R}$
\end_inset

 relates to true income through 
\begin_inset Formula 
\[
Y_{ij}^{True}=\begin{cases}
Y_{ij}^{R} & \text{if }i\text{ is wage worker}\\
\lambda_{j}Y_{ij}^{R} & \text{if }i\text{ is self-employed}
\end{cases}
\]

\end_inset


\end_layout

\end_deeper

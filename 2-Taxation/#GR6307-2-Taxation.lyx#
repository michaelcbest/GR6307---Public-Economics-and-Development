\shape default

\begin_inset VSpace bigskip
\end_inset


\series default
\shape italic

\begin_inset Formula 
\[
\underbrace{\;\frac{\tau}{1-\tau}\times\frac{\partial\tau_{E}}{\partial\tau}\left(\mu\right)\;}_{\text{effective wedge (\downarrow\ in }\mu)}=\underbrace{\;\;G\left(\mu\right)\;\;}_{\text{ tax gap (\uparrow\ in }\mu)}\times\underbrace{\;\;\frac{\varepsilon_{\hat{c}-c}}{\varepsilon_{y}}\;\;}_{\text{elasticity ratio }}
\]


\begin_deeper
\begin_layout Itemize
Simple AS model: Risk-neutral taxpayer has true income 
\begin_inset Formula $\bar{y}$
\end_inset

, reports income 
\begin_inset Formula $y$
\end_inset

, evades 
\begin_inset Formula $e\equiv\bar{y}-y$
\end_inset

.
\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
Probability of detection 
\begin_inset Formula $p\left(e\right)$
\end_inset

 with 
\begin_inset Formula $p^{\prime}\left(e\right)>0$
\end_inset


\begin_inset VSpace medskip
\end_inset


\end_layout

\begin_layout Itemize
If evasion is detected, taxpayer pays evaded tax plus penalty proportional
 to evaded tax 
\begin_inset Formula $\theta\tau e$
\end_inset


\begin_inset Formula 
\[
u=\left(1-p\left(e\right)\right)\cdot\left[\bar{y}\left(1-\tau\right)+\tau e\right]+p\left(e\right)\left[\bar{y}\left(1-\tau\right)-\theta\tau e\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
Interior optimum for 
\begin_inset Formula $e$
\end_inset

 satisfies
\begin_inset Formula 
\[
p\left(e\right)\left(1+\varepsilon\right)\left(1+\theta\right)=1
\]

\end_inset

where 
\begin_inset Formula $\varepsilon\equiv p^{\prime}\left(e\right)e/p\geq0$
\end_inset

 is elasticity of detection probability
\end_layout


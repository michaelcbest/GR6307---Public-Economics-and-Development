\begin_layout Itemize
Final goods
\begin_inset Formula 
\begin{eqnarray*}
w & = & F_{l_{B}}^{\prime}\times\left(1-\tau_{E}\right)=F_{y_{A}}^{\prime}\times\left(1-\tau_{E}\right)^{2}\\
\text{MRTS}_{l_{B},y_{A}} & = & F_{l_{B}}^{\prime}/F_{y_{A}}^{\prime}=1-\tau_{E}
\end{eqnarray*}

\end_inset



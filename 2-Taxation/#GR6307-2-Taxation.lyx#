Besley & Persson (2013): Investment in Fiscal Capacity
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Let maximized government welfare be
\size small

\begin_inset Formula 
\[
W\left(\boldsymbol{\tau}_{s},R_{s}-m_{2};\left\{ \mu^{J}\right\} \right)=\max_{g_{s},\boldsymbol{t}_{s},t_{s}^{1},\ldots,r_{s}^{J}}\left\{ \sum_{J=1}^{\mathcal{J}}\mu^{J}\xi^{J}V^{J}\left(\boldsymbol{t}_{s},\boldsymbol{\tau}_{s},g_{s},\omega_{s}^{J},r_{s}^{J}\right)\right\} 
\]

\end_inset


\end_layout

\begin_layout Itemize
Then fiscal capacity investment chooses 
\begin_inset Formula $\boldsymbol{\tau}_{2}$
\end_inset

 to maximize
\begin_inset Formula 
\[
W\left(\boldsymbol{\tau}_{1},R_{1}-\mathcal{F}\left(\boldsymbol{\tau}_{2},\boldsymbol{\tau}_{1}\right);\left\{ \mu^{J}\right\} \right)+W\left(\boldsymbol{\tau}_{2},R_{2};\left\{ \mu^{J}\right\} \right)
\]

\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $\tau_{k,1}>0$
\end_inset

 then optimum satisfies
\size small

\begin_inset Formula 
\begin{align*}
\lambda_{2}\frac{\partial B\left(\boldsymbol{t}_{2}^{*},\boldsymbol{\tau}_{2}\right)}{\partial\tau_{k,2}}+\frac{\partial Q\left(\boldsymbol{t}_{2}^{*},\boldsymbol{\tau}_{2}\right)}{\partial\tau_{k,2}}-\lambda_{1}\frac{\partial\mathcal{F}\left(\boldsymbol{\tau}_{1},\boldsymbol{\tau}_{2}\right)}{\partial\tau_{k,2}} & \leqslant0\quad\text{for }k=1,2,\ldots,N,L\\
c.s.\;\tau_{k,2} & \geq\tau_{k,1}>0
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain

\begin_deeper
\begin_layout Itemize
Agents are choosing how much to participate in a pro-social activity.
 
\end_layout

\begin_layout Itemize
Choose 
\begin_inset Formula $a$
\end_inset

 from choice set 
\begin_inset Formula $A\subset\mathbb{R}$
\end_inset

 incurring cost 
\begin_inset Formula $C\left(a\right)$
\end_inset


\end_layout

\begin_layout Itemize
Monetary reward is 
\begin_inset Formula $ya$
\end_inset

, 
\begin_inset Formula $y\lessgtr0$
\end_inset


\end_layout

\begin_layout Itemize
Agents' types are 
\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $v_{a}$
\end_inset

: intrinsic valuation
\end_layout

\begin_layout Itemize
\begin_inset Formula $v_{y}$
\end_inset

: extrinsic valuation
\end_layout

\begin_layout Itemize
\begin_inset Formula $\mathbf{v}\equiv\left(v_{a},v_{y}\right)\in\mathbb{R}^{2}$
\end_inset

.
 continuous density 
\begin_inset Formula $f\left(\mathbf{v}\right)$
\end_inset

 and mean 
\begin_inset Formula $\left(\bar{v}_{a},\bar{v}_{y}\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
Direct benefit of participating is 
\begin_inset Formula 
\[
\left(v_{a}+v_{y}y\right)a-C\left(a\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset



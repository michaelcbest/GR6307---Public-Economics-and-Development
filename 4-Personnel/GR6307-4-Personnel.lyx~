\begin_inset Formula $\mathbf{P}$
\end_inset


\end_layout

\begin_layout Itemize
growth rate in revenue is 
\begin_inset Formula $y_{i}=y_{i0}+e_{i}+\epsilon_{i}$
\end_inset

, 
\begin_inset Formula $\epsilon_{i}\sim iid$
\end_inset

 with sd 
\begin_inset Formula $\sigma_{\epsilon}$
\end_inset


\end_layout

\begin_layout Itemize
For a vector of outcomes 
\begin_inset Formula $\mathbf{y}$
\end_inset

, the PRSD mechanism yields an allocation 
\begin_inset Formula $r_{i}\left(\mathbf{y},\mathbf{P}\right)$
\end_inset


\end_layout

\begin_layout Itemize
If effort has convex cost 
\begin_inset Formula $c\left(e_{i}\right)$
\end_inset

 then each inspector maximizes
\begin_inset Formula 
\[
\max_{e_{i}}\sum_{j=1}^{J}u_{ij}\mathbb{P}\left(j=r_{i}\left(\mathbf{y},\mathbf{P}\right)\right)-c\left(e_{i}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Argument item:1
status open

\begin_layout Plain Layout
\begin_inset Formula $\Rightarrow$
\end_inset


\end_layout

\end_inset

effort choice satisfies
\begin_inset Formula 
\[
\frac{d\mathbb{E}\left[u\right]}{de_{i}}=\sum_{j=1}^{J}u_{ij}\frac{\partial\mathbb{P}\left(j=r_{i}\left(y_{i},\mathbf{y}_{-i},\mathbf{P}\right)\right)}{\partial y_{i}}=c^{\prime}\left(e_{i}\right)
\]

\end_inset


\end_layout


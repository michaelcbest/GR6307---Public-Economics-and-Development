\begin_deeper
\begin_layout Itemize
Teachers on day 
\begin_inset Formula $t=\left\{ 1,\ldots,T_{m}\right\} $
\end_inset

 of month 
\begin_inset Formula $m$
\end_inset

 value consumption 
\begin_inset Formula $C_{tm}$
\end_inset

 and leisure 
\begin_inset Formula $L_{tm}$
\end_inset


\begin_inset Formula 
\[
U_{tm}=U\left(C_{tm},L_{tm}\right)=\beta C_{tm}\left(\pi_{m}\right)+\left(\mu_{tm}-P\right)L_{tm}
\]

\end_inset

where 
\begin_inset Formula $P$
\end_inset

 is nonpecuniary cost of missing work.
\end_layout

\begin_layout Itemize
Consumption depends on earned income 
\begin_inset Formula $\pi_{m}$
\end_inset

, 
\begin_inset Formula $\beta$
\end_inset

 turns rupees of consumption into utility.
\end_layout

\begin_layout Itemize
\begin_inset Formula $L_{tm}$
\end_inset

 is 1 if the teacher doesn't attend work, and zero otherwise.
\end_layout

\begin_layout Itemize
Leisure coefficient has deterministic and stochastic parts
\begin_inset Formula 
\[
\mu_{tm}=\mu+\epsilon_{tm}
\]

\end_inset

where 
\begin_inset Formula $\epsilon_{tm}$
\end_inset

 is assumed to be normal.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset



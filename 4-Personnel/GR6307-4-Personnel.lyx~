\begin_deeper
\begin_layout Itemize
Moments to use
\end_layout

\begin_layout Enumerate
Pollution equation: Let 
\begin_inset Formula $Z_{j}=\left[\begin{array}{ccc}
1 & X_{j} & T_{j}\end{array}\right]$
\end_inset


\begin_inset Formula 
\[
g_{1}\left(\phi\right)=Z_{j}^{\prime}\left(\log P_{j}-\phi_{0}-\phi_{1}X_{j}-\phi_{2}Run\right)
\]

\end_inset


\end_layout

\begin_layout Enumerate
Expected inspections
\begin_inset Formula 
\begin{align*}
g_{2}\left(\lambda,\beta\right) & =\mathbf{1}^{\prime}\left(\mathbb{E}\left[\mathcal{I}\left(u_{1j}\vert X_{j},T_{j},\lambda,\beta,\rho\right)\right]-I_{j}\right)\\
g_{3}\left(\lambda,\beta\right) & =\mathbf{1}^{\prime}\left(\mathbb{E}\left[\mathcal{I}^{2}\left(u_{1j}\vert X_{j},T_{j},\lambda,\beta,\rho\right)\right]-I_{j}^{2}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
Probability and cost of runnning abatement equipment
\begin_inset Formula 
\begin{align*}
g_{4}\left(\phi,\mu,\sigma\right) & =\mathbb{P}\left(Run=1\vert\phi,\mu,\sigma\right)-\frac{1}{N}\sum_{j}\mathbf{1}\left\{ c_{j}>0\right\} \\
g_{5}\left(\phi,\mu,\sigma\right) & =\mathbb{E}\left[c_{j}\vert Run=1,\phi,\mu,\sigma\right]-\frac{1}{\sum_{j}\mathbf{1}\left\{ c_{j}>0\right\} }\sum_{j}\mathbf{1}\left\{ c_{j}>0\right\} c_{j}
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Duflo et al 2017: Estimating the Targeting Stage
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Argument item:1
status open

\begin_layout Plain Layout
4.
\end_layout

\end_inset

Variance of pollution shocks and covariance with inspections
\begin_inset Formula 
\begin{align*}
g_{6}\left(\beta,\phi,\sigma\right) & =\mathbb{E}\left[\varepsilon_{2}^{2}\vert\beta,\phi,\sigma\right]-\sum_{j}\hat{\varepsilon}_{2}^{2}/N=\sigma_{1}^{2}+\sigma_{2}^{2}-\sum_{j}\hat{\varepsilon}_{2}^{2}/N\\
g_{7}\left(\beta,\phi,\sigma\right) & =\mathbb{E}\left[\varepsilon_{2}\cdot\mathcal{I}\vert\theta\right]-\sum_{j}\hat{\varepsilon}_{2j}\times I_{j}/N
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
stack all these moments to form 
\begin_inset Formula $g\left(\theta_{T}\right)=\left[\begin{array}{cccc}
g_{1}^{\prime} & g_{2}^{\prime} & \ldots & g_{7}^{\prime}\end{array}\right]$
\end_inset


\end_layout

\begin_layout Itemize
Minimize 
\begin_inset Formula $gWg^{\prime}$
\end_inset

 to estimate 
\begin_inset Formula $\hat{\theta}_{T}$
\end_inset

.
 
\end_layout


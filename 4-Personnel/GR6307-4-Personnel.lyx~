\begin_deeper
\begin_layout Itemize
Treatment group have a very different problem to solve since they face incentive
s for attendance.
\end_layout

\begin_layout Itemize
In periods 
\begin_inset Formula $t<T_{m}$
\end_inset


\begin_inset Formula 
\begin{align*}
V_{m}\left(t,d;\epsilon_{tm}\right) & =p_{m}\left(t,d\right)+\left(1-p_{m}\left(t,d\right)\right)\times\\
 & \quad\max\left\{ \mu-P+\epsilon_{tm}+EV_{m}\left(t+1,d;\epsilon_{t,m+1}\right)\right.\\
 & \qquad\quad\left.,EV_{m}\left(t+1,d+1;\epsilon_{t,m+1}\right)\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
In period 
\begin_inset Formula $T_{m}$
\end_inset


\begin_inset Formula 
\begin{align*}
V_{m}\left(T_{m},d;\epsilon_{T_{m},m}\right) & =p_{m}\left(T_{m},d\right)F+\left[1-p_{m}\left(T_{m},d\right)\right]\times\\
 & \quad\max\left\{ \mu-\bar{P}+\epsilon_{T_{m},m}+\beta\pi\left(d\right)\right.\\
 & \qquad\qquad+EV_{m+1}\left(1,0;\epsilon_{t,m+1}\right)\\
 & \qquad\quad\left.,\beta\pi\left(d+1\right)+EV_{m+1}\left(1,0;\epsilon_{t,m+1}\right)\right\} 
\end{align*}

\end_inset


\end_layout

\end_deeper

\begin_deeper
\begin_layout Itemize
3 types of agents 
\begin_inset Formula $j\in\left\{ 0,1,2\right\} $
\end_inset


\end_layout

\begin_layout Itemize
Agents get a nonpecuniary benefit 
\begin_inset Formula $\theta_{ij}$
\end_inset

 from working at a type 
\begin_inset Formula $i$
\end_inset

 organization
\end_layout

\begin_layout Itemize
Type 0s don't care: 
\begin_inset Formula $\theta_{i0}=0$
\end_inset

, 
\end_layout

\begin_layout Itemize
Types 1 and 2 are 
\begin_inset Quotes eld
\end_inset

Motivated Agents
\begin_inset Quotes erd
\end_inset

: Get 
\begin_inset Formula $\bar{\theta}$
\end_inset

 from working at 
\begin_inset Quotes eld
\end_inset

their
\begin_inset Quotes erd
\end_inset

 type, 
\begin_inset Formula $\underline{\theta}$
\end_inset

 from working at the other type.
 
\begin_inset Formula $\bar{\theta}>\underline{\theta}\geq0$
\end_inset


\begin_inset Formula 
\[
\theta_{ij}=\begin{cases}
0 & \text{if }i=0\text{ and/or }j=0\\
\text{\ensuremath{\underline{\theta}}} & \text{if }i\in\left\{ 1,2\right\} ,j\in\left\{ 1,2\right\} ,i\neq j\\
\bar{\theta} & \text{if }i\in\left\{ 1,2\right\} ,j\in\left\{ 1,2\right\} ,i=j
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Itemize
Assume: 
\begin_inset Formula $\max\left\{ \pi_{0},\hat{\pi}+\bar{\theta}\right\} <1$
\end_inset

 to guarantee interior solutions for effort in all matches
\end_layout


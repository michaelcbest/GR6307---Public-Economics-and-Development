\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The first order condition for the choice of 
\begin_inset Formula $a$
\end_inset

 is still
\begin_inset Formula 
\[
C^{\prime}\left(a\right)=v_{a}+v_{y}y+r\left(a,y;\boldsymbol{\mu}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Now the reputational concern term in the first order condition 
\begin_inset Formula $r\left(a,y;\boldsymbol{\mu}\right)$
\end_inset

 is also normally distributed, with mean 
\begin_inset Formula $\bar{r}\left(a,y;\boldsymbol{\mu}\right)$
\end_inset

 and variance
\begin_inset Formula 
\begin{align*}
\Omega\left(a,y\right)^{2} & \equiv\left(\frac{\partial\mathbb{E}\left[v_{a}\vert a,y\right]}{\partial a}-\frac{\partial\mathbb{E}\left[v_{y}\vert a,y\right]}{\partial a}\right)\\
 & \quad\times\left(\begin{array}{cc}
\omega_{a}^{2} & \omega_{ay}\\
\omega_{ay} & \omega_{y}^{2}
\end{array}\right)\times\left(\begin{array}{c}
\frac{\partial\mathbb{E}\left[v_{a}\vert a,y\right]}{\partial a}\\
-\frac{\partial\mathbb{E}\left[v_{y}\vert a,y\right]}{\partial a}
\end{array}\right)
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset



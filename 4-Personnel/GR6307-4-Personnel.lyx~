\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Benabou & Tirole 2006: Image Rewards
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Updating still satisfies 
\begin_inset Formula 
\begin{align*}
\mathbb{E}\left[v_{a}\vert a,y\right] & =\bar{v}_{a}+\rho\left(a,y\right)\left[ka-\bar{v}_{a}-\bar{v}_{y}y-\bar{r}\left(a,y\right)\right]\\
\mathbb{E}\left[v_{y}\vert a,y\right] & =\bar{v}_{y}+\chi\left(a,y\right)\left[ka-\bar{v}_{a}-\bar{v}_{y}y-\bar{r}\left(a,y\right)\right]
\end{align*}

\end_inset

but now
\begin_inset Formula 
\begin{align*}
\rho\left(a,y\right) & \equiv\frac{\sigma^{2}+y\sigma_{ay}}{\sigma_{a}^{2}+2y\sigma_{ay}+y^{2}\sigma_{y}^{2}+\Omega\left(a,y\right)^{2}}\\
\chi\left(a,y\right) & \equiv\frac{y\sigma^{2}+\sigma_{ay}}{\sigma_{a}^{2}+2y\sigma_{ay}+y^{2}\sigma_{y}^{2}+\Omega\left(a,y\right)^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Equilibrium solves these differential equations.
 
\end_layout

\begin_deeper
\begin_layout Itemize
But note they are now nonlinear because of the 
\begin_inset Formula $\Omega^{2}$
\end_inset

 term.
\end_layout

\begin_layout Itemize
Restrict attention to equilibria in the class where 
\begin_inset Formula $\Omega\perp a$
\end_inset

.
 This keeps reputations linear in 
\begin_inset Formula $a$
\end_inset


\end_layout

\end_deeper
\end_deeper
